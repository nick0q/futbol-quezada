@model futbol.Models.Player;

@{
    ViewData["Title"] = "Asociar Jugador con Equipo";
    var jugadores = ViewBag.Jugadores as List<futbol.Models.Player>;
    var equipos = ViewBag.Equipos as List<futbol.Models.Team>;
}

<h2>Asociar Jugador con Equipo</h2>


<form asp-action="Asociar" method="post">
    <div class="form-group">
        <label>Jugador:</label>
        <select name="playerId" class="form-control" required>
            <option value="">-- Selecciona un jugador --</option>
            @foreach (var jugador in jugadores)
            {
                <option value="@jugador.Id">@jugador.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label>Equipo:</label>
        <select name="teamId" class="form-control" required>
            <option value="">-- Selecciona un equipo --</option>
            @foreach (var equipo in equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Asociar</button>

            @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success">
                @TempData["Mensaje"]
            </div>
        }
</form>
